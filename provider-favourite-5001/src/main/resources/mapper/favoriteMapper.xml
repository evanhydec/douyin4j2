<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.dao.favoriteDao">

    <sql id="BASE_TABLE">
        favorites
    </sql>

    <insert id="createFavorite">
        INSERT INTO
            <include refid="BASE_TABLE"></include>
        <trim prefix="VALUES(" suffix=")" suffixOverrides=",">
            #{uid},#{vid},
        </trim>
    </insert>

    <delete id="deleteFavorite">
        DELETE FROM
            <include refid="BASE_TABLE"></include>
        WHERE
            userId = #{uid} and videoId = #{vid}
    </delete>

    <select id="getFavoriteVideosByUserId" resultType="Integer">
        SELECT videoId
        FROM
            <include refid="BASE_TABLE"></include>
        WHERE
            userId = #{id}
    </select>

    <select id="checkFavorite" resultType="Integer">
        SELECT count(*)
        FROM
            <include refid="BASE_TABLE"></include>
        WHERE
            userId = #{uid} and videoId = #{vid}
    </select>

</mapper>